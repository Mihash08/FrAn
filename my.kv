<LoginWindow>:
    name: "login"

    phone: phone
    username: username
    wrong_login: wrong_login

    FloatLayout:

        Label:
            text:"Phone number: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35, 0.15

        TextInput:
            id: phone
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.45 , "top":0.9}
            size_hint: 0.4, 0.15

        Label:
            text:"Username: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint: {"x":0.1, "top":0.7}
            size_hint: 0.35, 0.15

        TextInput:
            id: username
            font_size: (root.width**2 + root.height**2) / 13**4
            multiline: False
            pos_hint: {"x": 0.45, "top":0.7}
            size_hint: 0.4, 0.15

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.2
            font_size: (root.width**2 + root.height**2) / 13**4
            text: "Login"
            on_release:
                root.manager.transition.direction = "up"
                root.loginBtn()

        Label:
            id: wrong_login
            pos_hint:{"x":0.3,"y":0.4}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 16**4
            text: ""

<LoginCodeWindow>:
    name: "code"

    code: code

    FloatLayout:
        cols:1

        FloatLayout:
            size: root.width, root.height/2

            Label:
                text: "Confirmation code sent to your device"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top":0.8}
                text: "Code: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                pos_hint: {"x":0.5, "top":0.8}
                size_hint: 0.4, 0.12
                id: code
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                id: wrong_code
                size_hint: 0.5,0.12
                pos_hint: {"x":0.5, "top":0.6}
                text: "Wrong code"
                font_size: (root.width**2 + root.height**2) / 14**4

        Button:
            pos_hint:{"x":0.3,"y":0.25}
            size_hint: 0.4, 0.1
            font_size: (root.width**2 + root.height**2) / 17**4
            text: "Back"
            on_release:
                root.manager.transition.direction = "left"
                root.login()

        Button:
            pos_hint:{"x":0.2,"y":0.05}
            size_hint: 0.6, 0.15
            text: "Submit"
            font_size: (root.width**2 + root.height**2) / 14**4
            on_release:
                root.manager.transition.direction = "left"
                root.submit()

<MainWindow>:
    name: "main"
    table: table

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        Table:
            id: table
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            padding: 50, 50, 50, 50

<Row>:
    spacing: 50
    size_hint_y: None
    size_hint_x: 1
    height: 100
    name: name
    phone: phone
    Label:
        id: name
        text: "name"

    Label:
        id: phone
        text: "phone"

    Label:
        id:count
        text: 'message count'

    Button:
        text: 'analyse'
        on_release:
            root.analyse()

<UserWindow>:
    name: "user"
    table: table

    ScrollView:
        do_scroll_x: False
        do_scroll_y: True

        Table:
            id: table
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            padding: 50, 50, 50, 50